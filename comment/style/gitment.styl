.gitment-container {
  font-family: font-sans;
  font-size: 15px;
  line-height: 1.5em;
  color: color-default;
  word-wrap: break-word;
}

.gitment-container * {
  box-sizing: border-box;
}

.gitment-container *:disabled {
  cursor: not-allowed;
}

.gitment-container a,
